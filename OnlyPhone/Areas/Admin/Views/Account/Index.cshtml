@model List<OnlyPhone.Areas.Admin.Data.UserListViewModel>
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/Css/admin/accountmanager.css" rel="stylesheet" />

<div class="stats-container">
    <div class="stat-card card-total" onclick="filterUsers('all')">
        <div class="stat-header"><div class="stat-title">Tổng tài khoản</div><div class="stat-icon"><i class="fas fa-users"></i></div></div>
        <div class="stat-number-wrapper"><div class="stat-number">@ViewBag.TotalUsers</div></div>
        <div class="stat-desc">Hệ thống</div>
    </div>
    <div class="stat-card card-online" onclick="filterUsers('online')">
        <div class="stat-header"><div class="stat-title">Đang Online</div><div class="stat-icon"><i class="fas fa-globe"></i></div></div>
        <div class="stat-number-wrapper"><div class="stat-number">@ViewBag.TotalOnline</div><div class="pulsating-dot"></div></div>
        <div class="stat-desc">Người dùng trực tuyến</div>
    </div>
    <div class="stat-card card-lock" onclick="filterUsers('locked')">
        <div class="stat-header"><div class="stat-title">Bị khóa</div><div class="stat-icon"><i class="fas fa-user-lock"></i></div></div>
        <div class="stat-number-wrapper"><div class="stat-number">@ViewBag.TotalLocked</div></div>
        <div class="stat-desc">Vi phạm chính sách</div>
    </div>
    <div class="stat-card card-user" onclick="filterUsers('customer')">
        <div class="stat-header"><div class="stat-title">Khách hàng</div><div class="stat-icon"><i class="fas fa-user-tag"></i></div></div>
        <div class="stat-number-wrapper"><div class="stat-number">@ViewBag.TotalCustomers</div></div>
        <div class="stat-desc">Tài khoản mua hàng</div>
    </div>
</div>

<div class="control-panel">
    <div class="filter-left">
        <div class="filter-title">Danh sách người dùng</div>
        <select id="filterStatus" class="form-select-sm" onchange="filterUsers()">
            <option value="all">Tất cả trạng thái</option>
            <option value="online">Online</option>
            <option value="offline">Offline</option>
            <option value="locked">Đang khóa</option>
        </select>
        <select id="filterRole" class="form-select-sm" onchange="filterUsers()">
            <option value="all">Loại người dùng</option>
            <option value="Admin">Admin</option>
            <option value="Staff">Staff</option>
            <option value="Customer">Customer</option>
        </select>
        <div class="search-wrapper" style="position:relative; width:100%; max-width:250px;">
            <i class="fas fa-search" style="position:absolute; left:10px; top:50%; transform:translateY(-50%); color:#888; font-size:13px;"></i>
            <input type="text" id="searchUser" class="form-control-sm" placeholder="Tìm kiếm tên tài khoản..." style="width:100%; padding-left:30px;" onkeyup="searchUsers()">
        </div>
    </div>
    <button class="btn-add" onclick="alert('Chức năng thêm mới đang được phát triển')"><i class="fas fa-plus"></i> Thêm mới</button>
</div>

<div class="user-container" id="userList">
    @foreach (var item in Model)
    {
        // Logic hiển thị trạng thái
        string statusClass = "inactive", statusText = "", filterStatus = "offline", cardClass = "";
        string lastActiveText = "Chưa đăng nhập";

        if (item.LastActive.HasValue)
        {
            var span = DateTime.Now - item.LastActive.Value;
            if (span.TotalMinutes < 1)
            {
                lastActiveText = "Vừa xong";
            }
            else if (span.TotalMinutes < 60)
            {
                lastActiveText = $"Hoạt động {Math.Floor(span.TotalMinutes)} phút trước";
            }
            else if (span.TotalHours < 24)
            {
                lastActiveText = $"Hoạt động {Math.Floor(span.TotalHours)} giờ trước";
            }
            else
            {
                lastActiveText = $"Hoạt động {Math.Floor(span.TotalDays)} ngày trước";
            }
        }

        if (item.IsLocked)
        {
            statusClass = "locked"; statusText = "Đang khóa"; filterStatus = "locked"; cardClass = "locked";
        }
        else if (item.IsOnline)
        {
            statusClass = "active"; statusText = "Online"; filterStatus = "online"; lastActiveText = "Đang hoạt động";
        }
        else
        {
            statusClass = "inactive"; statusText = lastActiveText; filterStatus = "offline";
        }

        <div class="user-card @cardClass" id="card-@item.UserId" data-username="@item.Username.ToLower()" data-status="@filterStatus" data-role="@item.Role">
            <div class="user-main-row">
                <div class="user-info-left">
                    <div class="user-avatar">
                        @if (string.IsNullOrEmpty(item.Avatar) || item.Avatar == "noAvt.jpg")
                        {
                            <span>@item.Username.Substring(0, 1).ToUpper()</span>
                        }
                        else
                        {
                            <img src="@Url.Content($"~/Content/Pic/Avartar/{item.Avatar}")" onerror="this.style.display='none';this.parentNode.innerText='@item.Username.Substring(0, 1).ToUpper()'">
                        }
                    </div>
                    <div class="user-details">
                        <h3>@item.Username</h3>
                        <select class="edit-mode form-select-sm input-role" style="margin-bottom:5px; height:30px; padding:2px 8px;">
                            <option value="Admin" @(item.Role == "Admin" ? "selected" : "")>Admin</option>
                            <option value="Staff" @(item.Role == "Staff" ? "selected" : "")>Staff</option>
                            <option value="Customer" @(item.Role == "Customer" ? "selected" : "")>Customer</option>
                        </select>
                        <p class="view-mode" style="text-transform:uppercase; font-weight:600; font-size:11px; letter-spacing:0.5px;">@item.Role</p>
                    </div>
                </div>

                <div class="user-info-right">
                    <div class="view-mode" style="text-align:right;">
                        <div class="status-badge @statusClass">@statusText <span class="status-dot"></span></div>
                        <p class="user-meta-text">@item.FullName</p>
                        <p class="user-email">@item.Email</p>
                    </div>

                    <div class="edit-mode" style="width:100%; text-align:right;">
                        <select class="form-select-sm input-locked" style="margin-bottom:5px; width:auto; margin-left:auto;">
                            <option value="false" @(!item.IsLocked ? "selected" : "")>Hoạt động</option>
                            <option value="true" @(item.IsLocked ? "selected" : "")>Đang khóa</option>
                        </select>
                        <input type="text" class="form-control-sm input-fullname" value="@item.FullName" placeholder="Họ tên" style="margin-bottom:5px;">
                        <input type="text" class="form-control-sm input-email" value="@item.Email" placeholder="Email">
                    </div>

                    <div class="action-buttons">
                        <button class="btn-icon view-mode" onclick="toggleDetail(@item.UserId)" id="btn-expand-@item.UserId" title="Xem chi tiết"><i class="fas fa-chevron-down" id="icon-expand-@item.UserId"></i></button>
                        <button class="btn-icon edit view-mode" onclick="toggleEditMode(@item.UserId, true)" title="Sửa"><i class="fas fa-pen"></i></button>

                        <button class="btn-icon edit-mode" onclick="openChangePassword(@item.UserId)" title="Đổi mật khẩu" style="color:var(--accent); border-color:var(--accent)"><i class="fas fa-key"></i></button>

                        <button class="btn-save edit-mode" onclick="saveUser(@item.UserId)">Lưu</button>
                        <button class="btn-cancel edit-mode" onclick="toggleEditMode(@item.UserId, false)">Hủy</button>
                    </div>
                </div>
            </div>

            <div class="detail-panel" id="detail-@item.UserId">
                <div class="edit-row">
                    <div class="edit-group" style="max-width: 80px;">
                        <label>ID</label>
                        <input type="text" class="form-control-sm" value="#@item.UserId" disabled>
                    </div>
                    <div class="edit-group">
                        <label>Ngày tạo</label>
                        <input type="text" class="form-control-sm" value="@item.CreatedDate.ToString("dd/MM/yyyy")" disabled>
                    </div>
                    <div class="edit-group">
                        <label>Cập nhật gần nhất</label>
                        <input type="text" class="form-control-sm" value="@(item.LastActive?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có")" disabled>
                    </div>
                </div>

                <div class="edit-row">
                    <div class="edit-group">
                        <label>Số điện thoại</label>
                        <input type="text" class="form-control-sm input-phone" value="@item.PhoneNumber" disabled>
                    </div>

                    <div class="edit-group" style="flex:2">
                        <label>Địa chỉ</label>

                        <div class="view-mode">
                            <input type="text" class="form-control-sm" value="@item.FullAddress" style="width:20vh;" disabled>
                        </div>

                        <div class="edit-mode" style="display:flex; gap:8px;">
                            <input type="text" class="form-control-sm input-homenumber" value="@item.HomeNumber" placeholder="Số nhà, đường">
                            <input type="text" class="form-control-sm input-ward" value="@item.Ward" placeholder="Phường/Xã">
                            <input type="text" class="form-control-sm input-province" value="@item.Province" placeholder="Tỉnh/Thành">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="custom-modal-overlay" id="passwordModal">
    <div class="custom-modal">
        <div class="modal-title"><i class="fas fa-key"></i> Đổi mật khẩu người dùng</div>
        <input type="hidden" id="modalUserId">
        <div style="margin-bottom:15px;">
            <label style="font-size:12px; color:var(--text-sub); margin-bottom:5px; display:block;">Mật khẩu mới</label>
            <input type="password" id="newPassword" class="form-control-sm" placeholder="Nhập mật khẩu mới...">
        </div>
        <div style="font-size:12px; color:var(--text-sub);">
            <i class="fas fa-info-circle"></i> Mật khẩu sẽ được mã hóa trước khi lưu.
        </div>
        <div class="modal-actions">
            <button class="btn-cancel" onclick="closePasswordModal()">Hủy</button>
            <button class="btn-save" onclick="confirmChangePassword()">Đồng ý</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 1. UI TOGGLE
        function toggleDetail(id) {
            const card = document.getElementById(`card-${id}`);
            if (card.classList.contains('editing')) return; // Prevent toggle while editing
            card.classList.toggle('expanded');
            const icon = document.getElementById(`icon-expand-${id}`);
            icon.className = card.classList.contains('expanded') ? 'fas fa-chevron-up' : 'fas fa-chevron-down';
        }

        function toggleEditMode(id, isEdit) {
            const card = document.getElementById(`card-${id}`);
            const btnExpand = document.getElementById(`btn-expand-${id}`);
            // Lấy các input trong phần detail để enable/disable
            const inputPhone = card.querySelector('.input-phone');

            if (isEdit) {
                card.classList.add('editing', 'expanded');
                btnExpand.style.display = 'none';
                inputPhone.disabled = false;
            } else {
                card.classList.remove('editing', 'expanded');
                btnExpand.style.display = 'flex';
                document.getElementById(`icon-expand-${id}`).className = 'fas fa-chevron-down';
                inputPhone.disabled = true;
            }
        }

        // 2. SAVE USER
        function saveUser(id) {
            const card = document.getElementById(`card-${id}`);

            // Thu thập dữ liệu
            const fullName = card.querySelector('.input-fullname').value.trim();
            const email = card.querySelector('.input-email').value.trim();
            const role = card.querySelector('.input-role').value;
            const isLocked = card.querySelector('.input-locked').value === "true";
            const phone = card.querySelector('.input-phone').value;

            // Thu thập địa chỉ tách biệt
            const home = card.querySelector('.input-homenumber').value;
            const ward = card.querySelector('.input-ward').value;
            const prov = card.querySelector('.input-province').value;

            if (!fullName || !email) {
                alert("Họ tên và Email không được để trống.");
                return;
            }

            const btn = card.querySelector('.btn-save');
            const oldText = btn.innerText;
            btn.innerText = '...'; btn.disabled = true;

            const data = {
                UserId: id,
                Role: role,
                IsLocked: isLocked,
                FullName: fullName,
                Email: email,
                PhoneNumber: phone,
                HomeNumber: home,
                Ward: ward,
                Province: prov
            };

            fetch('/Admin/Users/SaveUser', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            }).then(r => r.json()).then(d => {
                if (d.success) {
                    alert('Cập nhật thành công!');
                    location.reload();
                } else {
                    alert(d.message);
                    btn.innerText = oldText; btn.disabled = false;
                }
            }).catch(e => { console.error(e); alert('Lỗi server'); btn.innerText = oldText; btn.disabled = false; });
        }

        // 3. PASSWORD CHANGE MODAL LOGIC
        function openChangePassword(id) {
            document.getElementById('modalUserId').value = id;
            document.getElementById('newPassword').value = '';
            document.getElementById('passwordModal').style.display = 'flex';
        }

        function closePasswordModal() {
            document.getElementById('passwordModal').style.display = 'none';
        }

        function confirmChangePassword() {
            const id = document.getElementById('modalUserId').value;
            const pass = document.getElementById('newPassword').value;

            if (!pass || pass.length < 6) {
                alert("Mật khẩu phải có ít nhất 6 ký tự.");
                return;
            }

            if (confirm('Bạn có chắc chắn muốn đổi mật khẩu cho user này?')) {
                fetch('/Admin/Users/ChangePassword', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ userId: id, newPassword: pass })
                }).then(r => r.json()).then(d => {
                    if (d.success) {
                        alert(d.message);
                        closePasswordModal();
                    } else {
                        alert(d.message);
                    }
                }).catch(e => alert('Lỗi server'));
            }
        }

        // 4. FILTER LOGIC
        function filterUsers(statusParam) {
            if (statusParam) {
                const statusEl = document.getElementById('filterStatus');
                const roleEl = document.getElementById('filterRole');
                if (statusEl && roleEl) {
                    if (statusParam === 'customer') {
                        roleEl.value = 'Customer'; statusEl.value = 'all';
                    } else {
                        statusEl.value = statusParam; roleEl.value = 'all';
                    }
                }
            }

            const status = document.getElementById('filterStatus').value;
            const role = document.getElementById('filterRole').value;
            const term = document.getElementById('searchUser').value.toLowerCase();

            document.querySelectorAll('.user-card').forEach(c => {
                const cStatus = c.getAttribute('data-status');
                const cRole = c.getAttribute('data-role');
                const cName = c.getAttribute('data-username');
                let show = true;
                if (status !== 'all' && status !== cStatus) show = false;
                if (role !== 'all' && role !== cRole) show = false;
                if (term && !cName.includes(term)) show = false;
                c.style.display = show ? 'flex' : 'none';
            });
        }
        function searchUsers() { filterUsers(); }
    </script>
}