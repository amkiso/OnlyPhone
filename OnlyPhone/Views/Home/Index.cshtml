            </a>
        </div>
    </div>
</div>

<!-- Featured Products -->
<div class="container">
    <div class="section-header">
        <h2 class="section-title"> Sản Phẩm Nổi Bật</h2>
        <a href="@Url.Action("Products", "Home", new { sort = "featured" })" class="view-all-btn">
            Xem tất cả <i class="fa-solid fa-arrow-right"></i>
        </a>
    </div>
    <div class="product-grid">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="product-card">
                @if (product.is_featured)
                {
                    <div class="product-badge">
                        <span class="badge-hot">HOT</span>
                    </div>
                }
                <div class="product-image-wrapper">
                    <img src="~/Content/Pic/images/@product.images"
                         alt="@product.product_name"
                         class="product-image" />
                </div>
                <div class="product-info">
                    <h3 class="product-name">@product.product_name</h3>
                    <div class="product-price-box">
                        <span class="product-price">@product.sale_price.ToString("N0") đ</span>
                        @if (product.original_price != 0 && product.original_price > product.sale_price)
                        {
                            <span class="product-original-price">@product.original_price.ToString("N0") đ</span>
                            <span class="product-discount">-@product.DiscountPercent%</span>
                        }
                    </div>
                    <div class="product-actions">
                        <a href="@Url.Action("ProductDetail", "Home", new { id = product.product_id })"
                           class="btn-view-detail">
                            Xem chi tiết
                        </a>
                        <button class="btn-add-cart" onclick="addToCart(@product.product_id)">
                            <i class="fa-solid fa-cart-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

