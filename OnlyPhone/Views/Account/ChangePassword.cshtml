@model OnlyPhone.Models.ChangePasswordRequest
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = null;
}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Css/profile.css" rel="stylesheet" />
    <link href="~/Content/FontAwesome/css/all.min.css" rel="stylesheet" />
    <style>
        .alert {
            padding: 12px 20px;
            border-radius: 8px;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 14px;
            transition: opacity 0.3s ease;
        }

        .alert-success {
            background: #f0fdf4;
            color: #166534;
            border: 1px solid #bbf7d0;
        }

        .alert-error {
            background: #fef2f2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .required {
            color: #ef4444;
        }

        .btn-toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6b7280;
            cursor: pointer;
            padding: 8px;
            font-size: 1rem;
            transition: color 0.3s ease;
        }

            .btn-toggle-password:hover {
                color: #3b82f6;
            }

        .password-strength {
            margin-top: 1rem;
            padding: 1rem;
            background: #f9fafb;
            border-radius: 8px;
        }

        .strength-bar {
            height: 8px;
            background: #e5e7eb;
            border-radius: 4px;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .strength-bar-fill {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 4px;
        }

        .strength-text {
            font-size: 0.9rem;
            font-weight: 600;
            text-align: center;
        }

        .btn i {
            margin-right: 6px;
        }
    </style>
</head>
<body>
    <div class="container">
        <main class="card" role="main" style="max-width: 500px; margin: 2rem auto;">
            <div class="card-inner">
                <h2 style="margin:0 0 8px 0;">
                    <i class="fas fa-key"></i> Đổi mật khẩu
                </h2>
                <p class="small" style="margin-bottom: 1.5rem; color: #6b7280;">
                    Vui lòng nhập mật khẩu hiện tại và mật khẩu mới để thay đổi
                </p>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    </div>
                }

                <form id="changePasswordForm" method="post" action="@Url.Action("ChangePassword", "Account")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="UserId" value="@Model.UserId" />

                    <div class="row">
                        <label for="currentPassword">
                            Mật khẩu hiện tại <span class="required">*</span>
                        </label>
                        <div style="flex: 1; position: relative;">
                            <input id="currentPassword"
                                   name="CurrentPassword"
                                   type="password"
                                   class="value"
                                   required
                                   placeholder="Nhập mật khẩu hiện tại">
                            <button type="button" class="btn-toggle-password" onclick="togglePassword('currentPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="row">
                        <label for="newPassword">
                            Mật khẩu mới <span class="required">*</span>
                        </label>
                        <div style="flex: 1; position: relative;">
                            <input id="newPassword"
                                   name="NewPassword"
                                   type="password"
                                   class="value"
                                   required
                                   minlength="6"
                                   placeholder="Nhập mật khẩu mới (tối thiểu 6 ký tự)">
                            <button type="button" class="btn-toggle-password" onclick="togglePassword('newPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="row">
                        <label for="confirmPassword">
                            Xác nhận mật khẩu <span class="required">*</span>
                        </label>
                        <div style="flex: 1; position: relative;">
                            <input id="confirmPassword"
                                   name="ConfirmPassword"
                                   type="password"
                                   class="value"
                                   required
                                   placeholder="Nhập lại mật khẩu mới">
                            <button type="button" class="btn-toggle-password" onclick="togglePassword('confirmPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="password-strength" id="passwordStrength" style="display: none;">
                        <div class="strength-bar">
                            <div class="strength-bar-fill" id="strengthBarFill"></div>
                        </div>
                        <div class="strength-text" id="strengthText"></div>
                    </div>

                    <div class="actions" style="margin-top: 1.5rem;">
                        <button type="submit" class="btn" id="submitBtn">
                            <i class="fas fa-check"></i> Đổi mật khẩu
                        </button>
                        <a href="@Url.Action("Profile", "Account")" class="btn ghost">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <script src="~/Scripts/CustomJS/ChangePassword.js"></script>
    <script src="~/Scripts/CustomJS/Pinglogin.js"></script>

</body>
</html>