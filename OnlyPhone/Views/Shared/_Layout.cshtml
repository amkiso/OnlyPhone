<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OnlyPhone Store</title>

    @Styles.Render("~/Content/Css/header.css")
    <link href="~/Content/FontAwesome/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/Css/seachbox.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <style>
        a {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>
<body>
    <header class="site-header">
        <div class="header-main">
            <button class="mobile-menu-toggle" id="mobileMenuToggle">
                <i class="fa-solid fa-bars"></i>
            </button>

            <div class="header-logo">
                <a href="@Url.Action("Index", "Home")" class="logo-page">
                    OnlyPhone <span>Store</span>
                </a>
            </div>

            <div class="header-search">
                <div class="search-container">
                    <form action="@Url.Action("SearchResult", "Search")" method="get" class="search-form">
                        <input type="text"
                               id="headerSearchInput"
                               name="q"
                               placeholder="Bạn cần tìm điện thoại gì..."
                               class="search-input"
                               autocomplete="off"
                               required>
                        <button type="submit" class="search-button">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </form>

                    <div id="searchResultsDropdown" class="search-suggestions-box">
                    </div>
                </div>
            </div>

            @Html.Action("HeaderParaticalView", "Home")
        </div>

        <div class="mobile-menu-overlay" id="mobileMenuOverlay"></div>

        <nav class="header-nav" id="headerNav">
            <div class="mobile-menu-close d-lg-none">
                <button id="mobileMenuClose">
                    <i class="fa-solid fa-times"></i>
                </button>
            </div>

            <ul class="main-menu">
                <!-- Danh mục sản phẩm -->
                <li class="menu-item has-submenu">
                    <a href="@Url.Action("Index", "Product")" class="submenu-toggle">
                        <span>
                            <i class="fa-solid fa-bars menu-icon"></i>
                            Danh mục sản phẩm
                        </span>
                        <i class="fa-solid fa-chevron-down chevron-icon"></i>
                    </a>
                    <ul class="submenu">
                        <!-- iPhone -->
                        <li class="menu-item has-submenu">
                            <a href="@Url.Action("Index", "Product", new { supplier = "Apple" })" class="submenu-toggle" style="text-transform: none;">
                                iPhone
                            </a>
                            <ul class="submenu">
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Apple", series = "iPhone 17 series" })">17 series</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Apple", series = "iPhone 16 series" })">16 series</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Apple", series = "iPhone 15 series" })">15 series</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Apple", series = "iPhone 14 series" })">14 series</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Apple", series = "iPhone 13 series" })">13 series</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Apple", series = "iPhone SE series" })">SE series</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Apple", series = "iPhone Air series" })">iPhone Air</a></li>
                            </ul>
                        </li>

                        <!-- Samsung -->
                        <li class="menu-item has-submenu">
                            <a href="@Url.Action("Index", "Product", new { supplier = "Samsung" })" class="submenu-toggle" style="text-transform: none;">
                                Samsung
                            </a>
                            <ul class="submenu">
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Samsung", series = "Galaxy AI" })">Galaxy AI</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Samsung", series = "Galaxy S25 series" })">Galaxy S25 series</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Samsung", series = "Galaxy Z" })">Galaxy Z (Màn hình gập)</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Samsung", series = "Galaxy S" })">Galaxy S</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Samsung", series = "Galaxy A" })">Galaxy A</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Samsung", series = "Galaxy M" })">Galaxy M</a></li>
                            </ul>
                        </li>

                        <!-- Xiaomi -->
                        <li class="menu-item has-submenu">
                            <a href="@Url.Action("Index", "Product", new { supplier = "Xiaomi" })" class="submenu-toggle" style="text-transform: none;">
                                Xiaomi
                            </a>
                            <ul class="submenu">
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Xiaomi", series = "Xiaomi Mi" })">Xiaomi Mi</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Xiaomi", series = "Xiaomi Redmi" })">Xiaomi Redmi</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Xiaomi", series = "Xiaomi Note 14" })">Xiaomi Note 14</a></li>
                            </ul>
                        </li>

                        <!-- Vivo -->
                        <li class="menu-item has-submenu">
                            <a href="@Url.Action("Index", "Product", new { supplier = "Vivo" })" class="submenu-toggle" style="text-transform: none;">
                                Vivo
                            </a>
                            <ul class="submenu">
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Vivo", series = "Vivo X" })">Vivo X</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Vivo", series = "Vivo V" })">Vivo V</a></li>
                                <li><a href="@Url.Action("Index", "Product", new { supplier = "Vivo", series = "Vivo Y" })">Vivo Y</a></li>
                            </ul>
                        </li>

                        <!-- Realme -->
                        <li class="menu-item">
                            <a href="@Url.Action("Index", "Product", new { supplier = "Realme" })">Realme</a>
                        </li>

                        <!-- HONOR -->
                        <li class="menu-item">
                            <a href="@Url.Action("Index", "Product", new { supplier = "HONOR" })">HONOR</a>
                        </li>

                        <!-- TECNO -->
                        <li class="menu-item">
                            <a href="@Url.Action("Index", "Product", new { supplier = "TECNO" })">TECNO</a>
                        </li>

                        <!-- Best Seller -->
                        <li class="menu-item">
                            <a href="@Url.Action("BestSeller", "Product")">Best Seller</a>
                        </li>
                    </ul>
                </li>

                <!-- Sản phẩm mới -->
                <li class="menu-item">
                    <a href="@Url.Action("NewProducts", "Product")">
                        Sản phẩm mới
                    </a>
                </li>

                <!-- Về chúng tôi -->
                <li class="menu-item has-submenu">
                    <a href="@Url.Action("About", "Home")" class="submenu-toggle">
                        <span>Về chúng tôi</span>
                        <i class="fa-solid fa-chevron-down chevron-icon"></i>
                    </a>
                    <ul class="submenu">
                        <li><a href="@Url.Action("About", "Home", new { section = "inspiration" })">Nguồn Cảm hứng</a></li>
                        <li><a href="@Url.Action("About", "Home", new { section = "mission" })">Mục đích chính</a></li>
                        <li><a href="@Url.Action("About", "Home", new { section = "tips" })">Mẹo & Thủ thuật</a></li>
                        <li><a href="@Url.Action("Contact", "Home")">Liên Hệ</a></li>
                    </ul>
                </li>

                <!-- DEAL HOT -->
                <li class="menu-item">
                    <a href="@Url.Action("Deals", "Product")">
                        DEAL HOT Bất ngờ
                    </a>
                </li>

                <!-- Tin tức -->
                <li class="menu-item has-submenu">
                    <a href="@Url.Action("Index", "News")" class="submenu-toggle">
                        <span>Tin tức</span>
                        <i class="fa-solid fa-chevron-down chevron-icon"></i>
                    </a>
                    <ul class="submenu">
                        <li><a href="@Url.Action("Index", "News", new { category = "promotion" })">Tin khuyến mãi</a></li>
                        <li><a href="@Url.Action("Index", "News", new { category = "event" })">Sự kiện</a></li>
                        <li><a href="@Url.Action("Index", "News", new { category = "recruitment" })">Tuyển dụng</a></li>
                    </ul>
                </li>

                <!-- Tra cứu đơn hàng -->
                <li class="menu-item">
                    <a href="@Url.Action("OrderHistory", "Account")">
                        Tra cứu đơn hàng
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div style="padding: 2rem 0; text-align: center; background: #f9fafb;">
                <div style="margin-bottom: 1rem;">
                    <a href="@Url.Action("Index", "Home")" style="font-size: 1.5rem; font-weight: bold; color: #3b82f6;">
                        OnlyPhone Store
                    </a>
                </div>
                <div style="display: flex; gap: 2rem; justify-content: center; flex-wrap: wrap; margin-bottom: 1rem;">
                    <a href="@Url.Action("About", "Home")">Về chúng tôi</a>
                    <a href="@Url.Action("Contact", "Home")">Liên hệ</a>
                    <a href="@Url.Action("Terms", "Home")">Điều khoản</a>
                    <a href="@Url.Action("Privacy", "Home")">Chính sách</a>
                </div>
                <p style="color: #6b7280; font-size: 0.9rem;">
                    &copy; @DateTime.Now.Year - OnlyPhone Store. All rights reserved.
                </p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/CustomJS/searchbox.js"></script>
    <script src="~/Scripts/CustomJS/header.js"></script>
    <script src="~/Scripts/Bootstrap/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>