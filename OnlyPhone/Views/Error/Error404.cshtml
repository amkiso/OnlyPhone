@{
    ViewBag.Title = "Không tìm thấy trang";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>404 - Không tìm thấy</title>
    <style>
        :root{
            --error-red: #c62828; /* main error red */
            --bg: #fff;
            --muted: #666;
            --card-bg: #fff7f7;
            --radius: 10px;
            --max-width: 720px;
        }

        html,body {
            height: 100%;
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial;
            background: linear-gradient(180deg, #fff 0%, #fffaf9 100%);
            color: #222;
        }

        .wrap {
            min-height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .card {
            background: var(--card-bg);
            border: 1px solid rgba(198,40,40,0.08);
            box-shadow: 0 8px 24px rgba(0,0,0,0.06);
            border-radius: var(--radius);
            padding: 36px;
            max-width: var(--max-width);
            width: 100%;
            text-align: center;
        }

        .error-code {
            font-size: 96px;
            line-height: 1;
            margin: 0;
            color: var(--error-red);
            font-weight: 700;
            letter-spacing: -2px;
        }

        .error-badge {
            display: inline-block;
            background: rgba(198,40,40,0.12);
            color: var(--error-red);
            padding: 6px 10px;
            border-radius: 6px;
            font-weight: 600;
            margin-top: 14px;
            font-size: 14px;
        }

        .message {
            margin-top: 18px;
            font-size: 20px;
            color: var(--error-red);
            font-weight: 600;
        }

        .explain {
            margin-top: 10px;
            color: var(--muted);
            font-size: 15px;
        }

        .actions {
            margin-top: 22px;
        }

        .btn {
            display: inline-block;
            padding: 10px 18px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            cursor: pointer;
        }

        .btn-primary {
            background: var(--error-red);
            color: #fff;
            border: 1px solid rgba(0,0,0,0.02);
        }

        .btn-secondary {
            background: transparent;
            color: var(--error-red);
            border: 1px solid rgba(198,40,40,0.18);
            margin-left: 10px;
        }

        a.btn:hover { opacity: 0.95; text-decoration: none; }

        @@media (max-width: 480px) {
            .error-code { font-size: 64px; }
            .card { padding: 24px; }
        }
    </style>
</head>
<body>
    <div class="wrap">
        <main class="card" role="main" aria-labelledby="errorTitle" aria-live="polite">
            <h1 id="errorTitle" class="error-code">404</h1>
            <div class="error-badge">Lỗi: Không tìm thấy</div>
            <p class="message" role="alert">Xin lỗi — trang bạn yêu cầu không tồn tại.</p>
            <p class="explain">Có thể đường dẫn sai, hoặc trang đã bị di chuyển/ xóa. Vui lòng kiểm tra lại hoặc quay về trang chủ.</p>

            <div class="actions">
                <a class="btn btn-primary" href="/">Quay về trang chủ</a>
                <a class="btn btn-secondary" href="javascript:history.back()">Quay lại</a>
            </div>
        </main>
    </div>
</body>
</html>